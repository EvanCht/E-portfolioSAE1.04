            z-index: 10;
            min-height: 100vh;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding: 64px 20px;
        }
        .card {
            width: 1100px;
            max-width: calc(100% - 40px);
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.6);
            border: 1px solid var(--glass-border);
            backdrop-filter: blur(6px) saturate(120%);
            padding: 30px;
        }

        h1.title {
            margin: 0 0 20px 0;
            text-align: center;
            font-size: 1.8rem;
        }
        .intro {
            text-align: center;
            font-size: 14px;
            color: var(--muted);
            margin-bottom: 28px;
        }

        .grid {
            display: grid;
            gap: 24px;
        }
        @media (min-width: 900px) {
            .grid {
                grid-template-columns: 1fr 1fr;
            }
        }

        .block {
            background: rgba(255,255,255,0.02);
            border-radius: 12px;
            padding: 18px;
            border: 1px solid rgba(255,255,255,0.08);
        }
        .block h2 {
            font-size: 16px;
            margin: 0 0 10px 0;
        }
        .block p {
            font-size: 14px;
            margin: 0 0 10px 0;
            color: var(--muted);
        }
        .block img {
            width: 100%;
            max-height: 260px;
            object-fit: contain;
            border-radius: 8px;
            display: block;
            margin-top: 8px;
        }

        /* ---------------- NAV BAR FIXE EN BAS ---------------- */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 14px 0;
            background: rgba(0, 0, 0, 0.35);
            backdrop-filter: blur(5px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 9999;
        }
        .bottom-nav a, .bottom-nav .nav-center {
            padding: 12px 24px;
            margin: 0 20px;
            background: rgba(0, 0, 0, 0.35);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            text-decoration: none;
            font-size: 14px;
            transition: transform 0.2s, background 0.2s;
        }
        .bottom-nav a {
            cursor: pointer;
        }
        .bottom-nav a:hover {
            transform: scale(1.05) rotate(3deg);
            background: radial-gradient(circle farthest-corner at 10% 20%, rgba(0, 0, 0, 0.6), rgba(138, 43, 226, 0.2));
        }
        .bottom-nav .nav-center {
            cursor: not-allowed;
            pointer-events: none;
            color: rgba(255, 255, 255, 0.7);
            background: transparent;
        }
        .bottom-nav .nav-center.active {
            transform: scale(1.04) rotate(3deg);
            background: radial-gradient(circle farthest-corner at 10% 20%, rgb(0, 191, 255), rgba(138, 43, 226, 0.5));
            transition: 0.5s;
            color: #fff;
        }

        .site-footer-wrapper {
            width: 100%;
            background: rgba(0, 0, 0, 0.85);
            box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.6);
            position: relative;
            z-index: 5; /* inférieur à la bottom-nav (z-index: 9999) */
