    <input name="data" id="data" type="date" class="infos">

    <button id="send" type="submit">Send</button>
    <button id="limpar" type="reset">Clear </button>
  </form>
</div>

<script>
  const downloadBtn = document.getElementById('downloadBtn');
  const overlay     = document.getElementById('downloadOverlay');
  const form        = overlay.querySelector('form');
  const clearBtn    = document.getElementById('limpar');

  // Ouvrir le formulaire
  downloadBtn.addEventListener('click', function () {
    overlay.style.display = 'flex';
  });

  // Fermer avec Clear
  clearBtn.addEventListener('click', function () {
    overlay.style.display = 'none';
  });

  // Fermer en cliquant en dehors du formulaire
  overlay.addEventListener('click', function (e) {
    if (e.target === overlay) {
      overlay.style.display = 'none';
      form.reset();
    }
  });

  // Envoi du formulaire + téléchargement du PDF
  form.addEventListener('submit', function (e) {
    e.preventDefault();

    const link = document.createElement('a');
    link.href = '{{ asset("documents/CV_Evan_Chavot.pdf") }}';
    link.download = 'CV_Evan_Chavot.pdf';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);

    overlay.style.display = 'none';
    form.reset();
  });
</script>

