        /* ---------- ACTIONS (boutons) ---------- */
        .actions {
            display:flex;
            gap:12px;
            flex-wrap:wrap;
            margin-top:6px;
        }

        .fancy-btn {
            min-width: 140px;
            height: 48px;
            cursor: pointer;
            color: #fff;
            font-size: 15px;
            border-radius: 10px;
            border: none;
            position: relative;
            background: #100720;
            transition: 0.12s;
            font-weight:600;
            padding: 0 18px;
        }
        .fancy-btn::after {
            content:'';
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle farthest-corner at 10% 20%, rgba(255,94,247,1) 17.8%, rgba(2,245,255,1) 100.2%);
            filter: blur(14px);
            z-index: -1;
            position: absolute;
            left: 0; top: 0;
            border-radius: 10px;
        }
        .fancy-btn:hover { transform: translateY(-3px); }

        /* small helper */
        .section-grid { display:grid; grid-template-columns: 1fr 1fr; gap:12px; }
        @media (max-width:880px) { .section-grid { grid-template-columns: 1fr; } }
    </style>
</head>
