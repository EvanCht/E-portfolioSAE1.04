    <style>
        /* ---------- PATTERN AURORA (même que sur la home) ---------- */
        .container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                    ellipse at 20% 30%,
                    rgba(138, 43, 226, 0.8) 0%,
                    rgba(138, 43, 226, 0) 60%
                ),
                radial-gradient(
                    ellipse at 80% 50%,
                    rgba(0, 191, 255, 0.7) 0%,
                    rgba(0, 191, 255, 0) 70%
                ),
                radial-gradient(
                    ellipse at 50% 80%,
                    rgba(50, 205, 50, 0.6) 0%,
                    rgba(50, 205, 50, 0) 65%
                ),
                linear-gradient(135deg, #000000 0%, #0a0520 100%);
            background-blend-mode: overlay, screen, hard-light;
            z-index: -10;
            animation: aurora-drift 25s infinite alternate ease-in-out;
        }
        .container::before {
            content: "";
            position: absolute;
            width: 200%;
            height: 200%;
            top: -50%;
            left: -50%;
            background: repeating-linear-gradient(
                    45deg,
                    rgba(255, 255, 255, 0.02) 0px,
                    rgba(255, 255, 255, 0.02) 1px,
                    transparent 1px,
                    transparent 40px
                ),
                repeating-linear-gradient(
                    -45deg,
                    rgba(255, 255, 255, 0.03) 0px,
                    rgba(255, 255, 255, 0.03) 1px,
                    transparent 1px,
                    transparent 60px
                );
            animation: grid-shift 20s linear infinite;
        }
        .container::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                circle at center,
                transparent 70%,
                rgba(10, 5, 32, 0.8) 100%
            );
            animation: aurora-pulse 8s infinite alternate;
        }
        @keyframes aurora-drift {
            0% { background-position: 0% 0%; filter: hue-rotate(0deg); }
            50% { background-position: -10% -5%; filter: hue-rotate(30deg) brightness(1.15); }
            100% { background-position: 5% 10%; filter: hue-rotate(60deg); }
        }
        @keyframes grid-shift { 0% { transform: translate(0, 0); } 100% { transform: translate(-50%, -50%); } }
        @keyframes aurora-pulse { 0% { opacity: 0.8; } 50% { opacity: 0.5; } 100% { opacity: 0.8; } }

        /* ---------- LAYOUT & TYPO ---------- */
        :root{
            --card-bg: rgba(10, 8, 20, 0.55);
            --accent: linear-gradient(90deg, rgba(255,94,247,0.9), rgba(2,245,255,0.9));
            --muted: #cfcdd3;
            --glass-border: rgba(255,255,255,0.06);
        }
        body{
            margin:0;
            font-family: "Segoe UI", Roboto, Arial, sans-serif;
            color: #eef0f6;
            -webkit-font-smoothing:antialiased;
            -moz-osx-font-smoothing:grayscale;
            line-height:1.5;
        }

        .page {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 64px 20px;
        }

        .card {
            width: 1100px;
            max-width: calc(100% - 40px);
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.6);
            border: 1px solid var(--glass-border);
            display: grid;
            grid-template-columns: 360px 1fr;
            gap: 32px;
            padding: 34px;
            backdrop-filter: blur(6px) saturate(120%);
        }

        /* mobile */
        @media (max-width: 880px) {
            .card { grid-template-columns: 1fr; padding: 22px; gap: 18px; }
            .left { order: 1; }
            .right { order: 2; }
        }

        /* ---------- LEFT COLUMN (infos perso) ---------- */
        .left {
            display:flex;
            flex-direction:column;
            gap:18px;
        }

        .avatar {
            width: 120px;
            height: 120px;
            border-radius: 14px;
            background: linear-gradient(180deg, rgba(255,255,255,0.04), rgba(255,255,255,0.01));
            display:flex;
            align-items:center;
            justify-content:center;
            font-weight:700;
            font-size:28px;
            color:#fff;
            box-shadow: 0 6px 18px rgba(0,0,0,0.5), inset 0 1px 0 rgba(255,255,255,0.02);
        }

        .name {
            font-size: 20px;
            font-weight:700;
            letter-spacing:0.2px;
        }
        .subtitle { color: var(--muted); font-size: 13px; margin-bottom:6px; }

        .info-list {
            background: rgba(255,255,255,0.02);
            padding: 12px;
            border-radius: 10px;
            font-size: 14px;
            color: #e9e9ef;
            line-height:1.6;
        }
        .info-list b{ color:#fff; display:inline-block; width:130px; }

        /* ---------- RIGHT COLUMN (profil, compétences, parcours) ---------- */
        .right {
