    <style>
        /* ----------PATTERN AURORA---------- */
        .container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                ellipse at 20% 30%,
                rgba(138, 43, 226, 0.8) 0%,
                rgba(138, 43, 226, 0) 60%
            ),
            radial-gradient(
                ellipse at 80% 50%,
                rgba(0, 191, 255, 0.7) 0%,
                rgba(0, 191, 255, 0) 70%
            ),
            radial-gradient(
                ellipse at 50% 80%,
                rgba(50, 205, 50, 0.6) 0%,
                rgba(50, 205, 50, 0) 65%
            ),
            linear-gradient(135deg, #000000 0%, #0a0520 100%);
            background-blend-mode: overlay, screen, hard-light;
            z-index: -10;
            animation: aurora-drift 25s infinite alternate ease-in-out;
        }
        .container::before {
            content: "";
            position: absolute;
            width: 200%;
            height: 200%;
            top: -50%;
            left: -50%;
            background: repeating-linear-gradient(
                45deg,
                rgba(255, 255, 255, 0.02) 0px,
                rgba(255, 255, 255, 0.02) 1px,
                transparent 1px,
                transparent 40px
            ),
            repeating-linear-gradient(
                -45deg,
                rgba(255, 255, 255, 0.03) 0px,
                rgba(255, 255, 255, 0.03) 1px,
                transparent 1px,
                transparent 60px
            );
            animation: grid-shift 20s linear infinite;
        }
        .container::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                circle at center,
                transparent 70%,
                rgba(10, 5, 32, 0.8) 100%
            );
            animation: aurora-pulse 8s infinite alternate;
        }
        @keyframes aurora-drift {
            0% { background-position: 0% 0%; filter: hue-rotate(0deg); }
            50% { background-position: -10% -5%; filter: hue-rotate(30deg) brightness(1.15); }
            100% { background-position: 5% 10%; filter: hue-rotate(60deg); }
        }
        @keyframes grid-shift { 0% { transform: translate(0, 0); } 100% { transform: translate(-50%, -50%); } }
        @keyframes aurora-pulse { 0% { opacity: 0.8; } 50% { opacity: 0.5; } 100% { opacity: 0.8; }
        }
        
        /* ---------- LAYOUT & TYPO ---------- */
        :root{
            --card-bg: rgba(10, 8, 20, 0.55);
            --accent: linear-gradient(90deg, rgba(255,94,247,0.9), rgba(2,245,255,0.9));
            --muted: #cfcdd3;
            --glass-border: rgba(255,255,255,0.06);
        }
        body{
            margin:0;
            font-family: "Segoe UI", Roboto, Arial, sans-serif;
            color: #eef0f6;
            -webkit-font-smoothing:antialiased;
            -moz-osx-font-smoothing:grayscale;
            line-height:1.5;
            padding-bottom: 80px; /* Pour éviter que le contenu soit caché par la navbar */
        }
        .page {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 64px 20px;
        }
        .card {
            width: 1100px;
            max-width: calc(100% - 40px);
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.6);
            border: 1px solid var(--glass-border);
            display: grid;
            grid-template-columns: 360px 1fr;
            gap: 32px;
            padding: 34px;
            backdrop-filter: blur(6px) saturate(120%);
        }
        /* mobile */
        @media (max-width: 880px) {
            .card { grid-template-columns: 1fr; padding: 22px; gap: 18px; }
            .left { order: 1; }
            .right { order: 2; }
        }
        /* ---------- LEFT COLUMN (infos perso) ---------- */
        .left {
            display:flex;
            flex-direction:column;
            gap:18px;
        }
        .avatar-img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 14px;
        }
        .name {
            font-size: 20px;
            font-weight:700;
            letter-spacing:0.2px;
        }
        .subtitle { color: var(--muted); font-size: 13px; margin-bottom:6px; }
        .info-list {
            background: rgba(255,255,255,0.02);
            padding: 12px;
            border-radius: 10px;
            font-size: 14px;
            color: #e9e9ef;
            line-height:1.6;
        }
        .info-list b{ color:#fff; display:inline-block; width:130px; }
        /* ---------- RIGHT COLUMN (profil, compétences, parcours) ---------- */
        .right {
            display:flex;
            flex-direction:column;
            gap:18px;
        }
        h1.title {
            margin: 0;
            font-size: 1.8rem;
            color: #fff;
        }
        h3.section {
            margin: 0;
            font-size: 15px;
            color: #fff;
            letter-spacing:0.2px;
        }
        .muted { color: var(--muted); font-size: 14px; }
        .profile {
            background: rgba(255,255,255,0.02);
            padding: 16px;
            border-radius: 10px;
            font-size: 15px;
            color:#f3f4f8;
        }
        .skills, .experience, .education, .langs, .interests, .projects {
            background: rgba(255,255,255,0.02);
            padding: 14px;
            border-radius: 10px;
            font-size: 14px;
            color:#eaecef;
        }
        ul.clean { margin:0; padding-left:18px; }
        ul.clean li { margin-bottom:8px; }
        /* ---------- ACTIONS (boutons) ---------- */
        .actions {
            display:flex;
            gap:12px;
            flex-wrap:wrap;
            margin-top:6px;
        }
        .fancy-btn {
            min-width: 140px;
            height: 48px;
            cursor: pointer;
            color: #fff;
            font-size: 15px;
            border-radius: 10px;
            border: none;
            position: relative;
            background: #100720;
            transition: 0.12s;
            font-weight:600;
            padding: 0 18px;
        }
        .fancy-btn::after {
            content:'';
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle farthest-corner at 10% 20%, rgba(255,94,247,1) 17.8%, rgba(2,245,255,1) 100.2%);
            filter: blur(14px);
            z-index: -1;
            position: absolute;
            left: 0; top: 0;
            border-radius: 10px;
        }
        .fancy-btn:hover { transform: translateY(-3px); }
        /* small helper */
        .section-grid { display:grid; grid-template-columns: 1fr 1fr; gap:12px; }
        @media (max-width:880px) { .section-grid { grid-template-columns: 1fr; } }

        /* ---------------- NAV BAR FIXE EN BAS ---------------- */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 14px 0;
            background: rgba(0, 0, 0, 0.35);
            backdrop-filter: blur(5px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 9999;
        }
        .bottom-nav a, .bottom-nav .nav-center {
            padding: 12px 24px;
            margin: 0 20px;
            background: rgba(0, 0, 0, 0.35);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            text-decoration: none;
            font-size: 14px;
            transition: transform 0.2s, background 0.2s;
        }
        .bottom-nav a {
            cursor: pointer;
        }
        .bottom-nav a:hover {
            transform: scale(1.05) rotate(3deg);
            background: radial-gradient(circle farthest-corner at 10% 20%, rgba(0, 0, 0, 0.6), rgba(138, 43, 226, 0.2));
        }
        .bottom-nav .nav-center {
            cursor: not-allowed;
            pointer-events: none;
            color: rgba(255, 255, 255, 0.7);
            background: transparent;
        }
        .bottom-nav .nav-center.active {
            transform: scale(1.04) rotate(3deg);
            background: radial-gradient(circle farthest-corner at 10% 20%, rgb(0, 191, 255), rgba(138, 43, 226, 0.5));
            transition: 0.5s;
            color: #fff;
        }

        /* ---------- Overlay + formulaire ---------- */
        #downloadOverlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            z-index: 10000;
            align-items: center;
            justify-content: center;
        }

        form.form {
            background-color: #444444;
            border-radius: 10px;
            padding: 20px;
